<!DOCTYPE html>
<html lang="es" class="w-100 h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @Gastos.Properties.Resources.AppName</title>

    <!-- CSS LIBRARIES-->
    <link href="~/lib/normalize/normalize.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/jquery-confirm/dist/jquery-confirm.min.css" rel="stylesheet" />        
    <link href="~/lib/jqueryui/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/lib/jqueryui/jquery-ui.structure.min.css" rel="stylesheet" />
    <link href="~/lib/jqueryui/jquery-ui.theme.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/57b6ea0eb8.js" crossorigin="anonymous"></script>

    <!--CSS MODULS-->
    <link href="~/css/share/site.css" rel="stylesheet" />

    <!--CSS SECTION-->
    @RenderSection("Styles", required: false)
</head>
<body class="w-100 h-75">
    <!--START: CONTAINER-->
    <div class="container-sm mt-1 h-100">        
        <!--START: RENDER-BODY-->
        <section class="container container-login h-100">
            @RenderBody()
        </section>
        <!--END: RENDER-BODY-->
        <!--START: FOOTER-->
        <footer class="row d-flex align-items-center p-1 m-0 w-100 footer-login">
            <div class="col">
                <a class="m-1" href="https://www.facebook.com/missael.armentaperalta" alt="Missael Armenta"><i class="fab fa-facebook"></i></a>
                <span>@Gastos.Properties.Resources.AppName - tu contador personal</span>
                <a class="m-1" href="https://www.instagram.com/missael.armenta/" alt="Missael Armenta"><i class="fab fa-instagram"></i></a>
            </div>
        </footer>
        <!--END: FOOTER-->
    </div>
    <!--END: CONTAINER-->
    <!--JS LIBRARIES-->
    <script src="~/lib/jquery/jquery.js"></script>    
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>            
    <script src="~/lib/jqueryui/jquery-ui.min.js"></script>    
    
    @RenderSection("Scripts", required: false)
</body>
</html>
