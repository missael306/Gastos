<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @Gastos.Properties.Resources.AppName</title>

    <!-- CSS LIBRARIES-->
    <link href="~/lib/normalize/normalize.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/jquery-confirm/dist/jquery-confirm.min.css" rel="stylesheet" />
    <link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/lib/jqueryui/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/lib/jqueryui/jquery-ui.structure.min.css" rel="stylesheet" />
    <link href="~/lib/jqueryui/jquery-ui.theme.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/57b6ea0eb8.js" crossorigin="anonymous"></script>

    <!--CSS MODULS-->
    <link href="~/css/share/site.css" rel="stylesheet" />

    <!--CSS SECTION-->
    @RenderSection("Styles", required: false)    
</head>
<body>

    <!--START: ERROR MESSAGE-->
    <section id="errorMessage">
        @if (ViewBag.lstAlerts != null)
        {
            foreach (var alert in ViewBag.lstAlerts)
            {
                <input type="hidden" class="alertNotify" value="@alert.Message" data-type="@alert.Type">
            }
        }
    </section>
    <!--END: ERROR MESSAGE-->
    <!--START: CONTAINER-->
    <div class="container-fluid">
        <!-- START: HEADER -->
        <header class="fixed-top">
            <nav class="navbar navbar-dark bg-dark">
                <a class="navbar-brand" href="#">Cocohua</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Features</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Pricing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- END: HEADER-->
        <!--START: RENDER-BODY-->
        <section class="container">
            @RenderBody()
        </section>
        <!--END: RENDER-BODY-->
        <!--START: FOOTER-->
        <footer class="row d-flex align-items-center p-1">
            <div class="col">
                <a class="m-1" href="https://www.facebook.com/missael.armentaperalta" alt="Missael Armenta"><i class="fab fa-facebook"></i></a>
                <span>Cocohua - tu contador personal</span>
                <a class="m-1" href="https://www.instagram.com/missael.armenta/" alt="Missael Armenta"><i class="fab fa-instagram"></i></a>
            </div>
        </footer>
        <!--END: FOOTER-->
    </div>
    <!--END: CONTAINER-->
    <!--JS LIBRARIES-->
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/jquery-confirm/dist/jquery-confirm.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.js"></script>
    <script src="~/lib/moment.js/moment.js"></script>
    <script src="~/lib/jqueryui/jquery-ui.min.js"></script>
    <script src="~/lib/jquery-maskmoney/jquery.maskMoney.min.js"></script>


    <!--JS MODULS-->
    <script src="~/js/share/gastos.share.js"></script>    
    @RenderSection("Scripts", required: false)
</body>
</html>
