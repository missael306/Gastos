@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<!--START: ACCOUNT-LOGIN-->
<section id="account-login" class="row justify-content-center">
    <div class="col-11 col-md-6 login-container">        
        <div class="login-body">
            <h4>Iniciar sesión.</h4>
            <hr />
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group mb-0">
                    <div class="row">
                        <p class="col text-center">
                            <a id="forgot-password" asp-page="./ForgotPassword">Olvide mi contraseña</a>
                        </p>
                        <p class="col text-center">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Crear una cuenta</a>
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Iniciar sesión</button>
                </div>
            </form>
            <div class="row">
                <div class="col-12">
                    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                            <div class="row">
                                <div class="col">
                                    <button type="submit" class="btn btn-primary btn-block btn-login-external btn-facebook" name="provider" value="Facebook" title="Iniciar sesión usando Facebook"><i class="fab fa-facebook"></i></button>
                                </div>
                                <div class="col">
                                    <button type="submit" class="btn btn-primary btn-login-external btn-google btn-block" name="provider" value="Google" title="Iniciar sesión usando Google"><i class="fab fa-google"></i></button>
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!--END: ACCOUNT-LOGIN-->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
