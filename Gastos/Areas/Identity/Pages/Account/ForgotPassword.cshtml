@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Olvide mi contaseña";
}

<!--START: ACCOUNT-->
<section id="account-register" class="row justify-content-center">
    <div class="col-6 login-container">
        <div class="login-body">
            <form method="post">
                <h4>¿Olvidaste tu contraseña?</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Enviar</button>
                </div>
            </form>
            <div class="row">
                <div class="col text-center">
                     Si el problema persiste contacte al administrador a través de redes o sociales o al correo.
                    <a href="mailto:missael306@gmail.com">missael306@gmail.com</a>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
